<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jarry.projectpsm.UserRegister2Activity"
    android:background="#ffcdafff">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etFacebook"
        android:background="#fffffff9"
        android:hint="@string/Facebook"
        android:backgroundTint="#ffd0fffa"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etUserDetail"
        android:layout_below="@+id/etFacebook"
        android:background="#fffffff9"
        android:backgroundTint="#ffd0fffa"
        android:layout_marginRight="5dp"
        android:layout_alignLeft="@+id/etFacebook"
        android:layout_alignStart="@+id/etFacebook"
        android:hint="@string/UserDetail" />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/Back"
        android:id="@+id/btn_Back"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/Next"
        android:id="@+id/btn_Next"
        android:layout_alignTop="@+id/btn_Back"
        android:layout_alignRight="@+id/etUserDetail"
        android:layout_alignEnd="@+id/etUserDetail" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUserDetail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:background="#ff15fff3"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/BankAccount"
            android:id="@+id/textView2"
            android:textColor="@color/background_floating_material_dark"
            android:textStyle="bold|italic"
            android:textSize="25dp"
            android:layout_alignBottom="@+id/btn_add"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add"
            android:src="@mipmap/icon_add"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:id="@+id/spinner_bank"
            android:background="#fffffff9"
            android:backgroundTint="#ffd0fffa"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etAccNo"
            android:background="#fffffff9"
            android:backgroundTint="#ffd0fffa"
            android:hint="@string/AccountNumber"
            android:layout_below="@+id/spinner_bank"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etAccName"
            android:background="#fffffff9"
            android:hint="@string/YourAccName"
            android:backgroundTint="#ffd0fffa"
            android:layout_below="@+id/etAccNo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView_Bank"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ffec90ff" />
    </RelativeLayout>

</RelativeLayout>
