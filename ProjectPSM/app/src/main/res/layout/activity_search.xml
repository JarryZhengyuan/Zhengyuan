<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jarry.projectpsm.SearchActivity"
    android:background="#fffdfbff"
    android:id="@+id/searchlayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Search"
        android:id="@+id/textView14"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff958aff"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginBottom="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffa97fff"
        android:id="@+id/relativeLayout4">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="27dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/etSearch"
            android:background="#fffffff9"
            android:backgroundTint="#ffd0fffa"
            android:hint="@string/example"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SearchTitleOnly"
            android:id="@+id/ch_box"
            android:layout_below="@+id/etSearch"
            android:layout_alignLeft="@+id/etSearch"
            android:layout_alignStart="@+id/etSearch"
            android:checked="true"
            android:layout_marginBottom="5dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Category"
        android:id="@+id/textView15"
        android:layout_below="@+id/relativeLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ffff7c92"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="27dp"
        android:id="@+id/sp_category"
        android:background="#ffffa4d1"
        android:backgroundTint="#ffffa4d1"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/State"
        android:id="@+id/textView16"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ffff7c92"
        android:layout_below="@+id/sp_category"
        android:layout_alignLeft="@+id/sp_category"
        android:layout_alignStart="@+id/sp_category" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="27dp"
        android:id="@+id/sp_state"
        android:background="#ffffa4d1"
        android:backgroundTint="#ffffa4d1"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Submit"
        android:id="@+id/btn_submit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
